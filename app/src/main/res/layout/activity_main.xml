<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".main.MainActivity"
        android:weightSum="1">

    <TextView
            android:id="@+id/main_ai_pick_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:visibility="gone"
            android:gravity="center"/>

    <TextView
            android:id="@+id/main_result_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:visibility="gone"
            android:gravity="center"/>

    <TextView
            android:id="@+id/main_welcome_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/main_tv_welcome"
            android:gravity="center"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="3">

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/main_rock_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/main_button_rock" />

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/main_paper_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/main_button_paper" />

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/main_scissors_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/main_button_scissors" />
    </LinearLayout>

</LinearLayout>